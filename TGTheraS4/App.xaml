                                                    <RowDefinition Height="23*"/>
                                                    <RowDefinition Height="19*"/>
                                                    <RowDefinition Height="19*"/>
                                                    <RowDefinition Height="19*"/>
                                                </Grid.RowDefinitions>
                                                <Border x:Name="Highlight" BorderBrush="{StaticResource Button.Pressed.Border}" BorderThickness="1" Grid.ColumnSpan="4" Margin="-1" Opacity="0" Grid.Row="0" Grid.RowSpan="4"/>
