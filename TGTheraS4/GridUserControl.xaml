<UserControl x:Class="TGTheraS4.GridUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="404" d:DesignWidth="546">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="353*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Content="Speichern" Height="23" Name="btnSave" Width="112" Click="btnSave_Click" Grid.Column="1" Margin="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Content="Abbrechen" Height="23" Name="btnCancel" VerticalContentAlignment="Center" Click="btnCancel_Click" Margin="0" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" />

        <DataGrid AutoGenerateColumns="True" Height="404" HorizontalAlignment="Left" Name="dgEdit" VerticalAlignment="Top" Width="353" AlternatingRowBackground="Gainsboro"  AlternationCount="2" Grid.RowSpan="3" />
    </Grid>
</UserControl>
