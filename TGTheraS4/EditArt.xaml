<Window x:Class="TheraS5.EditArt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditArt" Height="213" Width="315" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Content="Abbrechen" Height="23" HorizontalAlignment="Center" Name="btnCancel"
                VerticalAlignment="Center" Width="75" Click="btnCancel_Click" Grid.Row="2" />
        <Button Content="Speichern" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnSave"
                VerticalAlignment="Center" Width="75" Click="btnSave_Click" Grid.Column="1" Grid.Row="2" />
        <Label Content="Art:" Height="28" HorizontalAlignment="Center" Name="label1" VerticalAlignment="Center" />
        <TextBox Height="23" HorizontalAlignment="Center" Name="txtArt" VerticalAlignment="Center" Width="120"
                 Grid.Column="1" />
    </Grid>
</Window>